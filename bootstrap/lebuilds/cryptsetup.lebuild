#!/bin/sh
name='cryptsetup'
version='1.4.3'
sources=( "http://$name.googlecode.com/files/$name-$version.tar.bz2" )
homepage='http://busybox.net/'
license='GPLv2'

build_cmd="
	cd /source/${name}-${version} && \
	./configure --prefix=/usr \
	--mandir=/usr/man \
	--disable-nls \
	--enable-static=yes \
	--enable-shared=no \
	--enable-static-cryptsetup && \
	make -j ${cores_num:-1}
"

deploy="/source/${name}-${version}/src/cryptsetup.static"

fetch_source
install_source
build_source

